@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Diagnostics
@using Ordering.Models
@model Ordering.Models.OrderModel

<h2>Order</h2>
<form>
    @if (Model.IsAdmin)
    {
        <div class="container">
            <input type="text" id="message" />
            <input type="button" id="sendmessage" value="Send" />

            <ul id="discussion">
            </ul>
        </div>
    }

    @Html.HiddenFor(model => model.Id)


    <div class="row">
        <table class="table table-bordered">
            <tr>
                <th class="col-sm-8">Product name</th>
                <th class="col-sm-2">Price</th>
                <th class="col-sm-2">Actions</th>
            </tr>
            <tbody data-bind="foreach: products">
                <tr style="border-bottom: 1px solid #000000;">
                    <td>
                        <span data-bind="text: name"></span>
                    </td>
                    <td>
                        <span data-bind="text: price"></span>RON
                    </td>
                    <td>
                        <input type="text" data-bind="value: numberOfProducts" style="max-width: 35px"/>
                        <input class="btn btn-primary" type="button" href="#" data-bind="click:addOrder" value="Add" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <p>
    </p>
    <div class="row">
        <table class="table table-bordered" data-bind="template: { name: 'orderTemplate', foreach: orders }, visible: orders().length > 0">
            <thead>
                <tr>
                    <th>Nume produs</th>
                    <th>Pret</th>
                    <th>Status</th>
                </tr>
            </thead>
        </table>

    </div>



</form>

<div class="row">
    Total:
        <label data-bind="text: total"></label>
</div>


<script type="text/html" id="orderTemplate">
    <!--Data Template-->
    <tr>
        <td>
            <input class="ui-corner-all" data-bind="value: productName, valueUpdate: 'afterkeydown'" /></td>
        <td>
            <input class="ui-corner-all" data-bind="value: price, valueUpdate: 'afterkeydown'" /></td>
        <td>
            <input class="ui-corner-all" data-bind="value: status, valueUpdate: 'afterkeydown'" /></td>
        <td>
            <input class="btn btn-default" type="button" href="#" data-bind="click:removeOrder" value="Delete" /></td>
        <td>
            <input class="btn btn-default" type="button" href="#" data-bind="click:processOrder" value="Process" /></td>
    </tr>
</script>

<script src="~/Scripts/jquery-1.6.4.min.js"></script>
<script src="~/Scripts/jquery.signalR-2.1.0.min.js"></script>
<script src="~/Scripts/knockout-3.1.0.debug.js"></script>
<script src="~/signalr/hubs"></script>
<script src="~/Scripts/OrderManager.js" type="text/javascript"></script>
<script src="~/Scripts/knockout.mapping-latest.js" type="text/javascript"></script>




